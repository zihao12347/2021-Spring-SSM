<?xml version="1.0" encoding="UTF-8"?>
<!--mybatis的(DTD)文档类型约束，进行相关标签的提示和约束-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.UserMapper">

    <!--sql标签：用于提取重复sql
          使用时：通过include标签，进行引用
   -->
    <sql id="selectAll">
        select * from user
    </sql>

    <!--根据条件动态查询:
         if标签：查询条件判断标签
               test属性：用于对某个查询参数进行判断
         where标签：用于简化动态sql后的where 1=1的条件拼装

   -->
    <select id="findByCondition" parameterType="user" resultType="user">
        <!--select * from user where 1=1-->
        <include refid="selectAll"></include>
        <where>
            <if test="userName!=null">
                and userName=#{userName}
            </if>
            <if test="gender!=null">
                and gender=#{gender}
            </if>
        </where>
    </select>

    <select id="findByPars" resultType="user">
       select * from user where userName=#{userName} and gender=#{gender}
    </select>

    <!--forEach标签：用于遍历集合/数组
        collection属性：代表需要遍历的集合/数组元素
        separator属性：分割符
        item属性：代表集合中的每个元素
        open属性：开始sql部分
        close属性：结束sql部分
    -->
    <insert id="saveBatch" parameterType="list">
        insert into user (userName,password,gender,birthday) values
        <foreach collection="list" separator="," item="user">
            (#{user.userName}, #{user. }, #{user.gender}, #{user.birthday})
        </foreach>
    </insert>
</mapper>